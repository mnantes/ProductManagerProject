<h1>Detalhes do Carrinho</h1>

{{#if cart.products.length}}
    <ul>
        {{#each cart.products}}
            <li>
                <h2>{{this.product.title}}</h2>
                <p>Descrição: {{this.product.description}}</p>
                <p>Preço: ${{this.product.price}}</p>
                <p>Quantidade: {{this.quantity}}</p>
            </li>
        {{/each}}
    </ul>
    <form action="/api/carts/{{cart._id}}" method="post">
        <button type="submit" formmethod="delete">Esvaziar Carrinho</button>
    </form>
{{else}}
    <p>O carrinho está vazio.</p>
{{/if}}
